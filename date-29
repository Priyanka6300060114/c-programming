#include<stdio.h>
main()
{
int arr[max size];
int i,pos,size;
printf("enter the size of the array");
scanf("%d",&size);
printf("enter the elements in an array");
for(i=0;i<size;i++)
{
scanf("%d",&arr[i]);
}
printf("enter the element position to delete");
scanf("%d",&pos);
if(pos<0||pos>size)
{
printf("out of bounds")
}
else
{
for(i=pos-1;i<size-1;i++)
{
arr[i]=arr[i+1];
}
size--;
printf("\n elements after deletion")
for(i=0;i<size;i++)
{
printf("%d\t",arr[i]);
}
}
return 0;
}

